page {
  background-color: #f7f8fa;
}
.container {
  padding-bottom: 40rpx;
}
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 10;
}
.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding-bottom: 10rpx;
}
.tab-item.active {
  color: #1890ff;
  font-weight: bold;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.venue-list {
  padding: 20rpx;
}
.venue-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}
.venue-info {
  flex: 1;
}
.venue-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.venue-meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}
.venue-status {
  font-size: 24rpx;
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}
.status-open {
  background: #e6f7ff;
  color: #1890ff;
}
.status-maintenance {
  background: #fffbe6;
  color: #faad14;
}
.status-closed {
  background: #f5f5f5;
  color: #999;
}
.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}
.status-approved {
  background: #f6ffed;
  color: #52c41a;
}
.status-rejected {
  background: #fff1f0;
  color: #f5222d;
}

.booking-list {
  padding: 20rpx;
}

.btn-book {
  background: #1890ff;
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
}
.btn-book[disabled] {
  background: #ccc !important;
  color: #fff !important;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 28rpx;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
}
.modal-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 101;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}
.modal-header {
  text-align: center;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
}
.modal-body {
  padding: 30rpx;
}
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
}
.form-item.input-item {
  display: block;
}
.form-item.input-item input {
  margin-top: 20rpx;
  width: 100%;
}
.label {
  color: #333;
}
.value {
  flex: 1;
  text-align: right;
  color: #666;
  margin-right: 10rpx;
}
.arrow {
  color: #ccc;
}
.modal-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}
.btn-cancel, .btn-confirm {
  flex: 1;
  border-radius: 40rpx;
  font-size: 30rpx;
}
.btn-cancel {
  background: #f5f5f5;
  color: #666;
}
.btn-confirm {
  background: #1890ff;
  color: #fff;
}

.slot-section {
  margin: 20rpx 0 10rpx;
}
.slot-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 14rpx;
}
.slot-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.slot-item {
  padding: 14rpx 22rpx;
  border-radius: 24rpx;
  background: #f5f7fa;
  color: #333;
  font-size: 26rpx;
}
.slot-item.active {
  background: #1890ff;
  color: #fff;
}
.slot-item.disabled {
  background: #f0f0f0;
  color: #aaa;
}
.slot-empty {
  color: #999;
  font-size: 26rpx;
}
