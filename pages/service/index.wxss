/* pages/service/index.wxss */
.container {
  width: 100%;
  box-sizing: border-box;
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 登录样式复用 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #fff;
  padding: 0 60rpx;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.logo-circle {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #ff9800, #ffc107);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  color: #fff;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 152, 0, 0.3);
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #999;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.wechat-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

/* 服务大厅 */
.service-grid-wrapper {
  padding: 40rpx 24rpx 0;
}

.section-title-area {
  margin-bottom: 24rpx;
  padding-left: 10rpx;
}

.section-main-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.section-sub-title {
  font-size: 24rpx;
  color: #bbb;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.grid-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  margin: 0;
}

.grid-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.grid-icon-wrapper {
  width: 110rpx;
  height: 110rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  transition: transform 0.2s;
}

.grid-icon {
  font-size: 52rpx;
}

.grid-name {
  font-size: 28rpx;
  color: #444;
  font-weight: 500;
}

/* 最近记录 */
.order-section {
  padding: 40rpx 24rpx 0;
}

.order-list {
  display: flex;
  flex-direction: column;
}

.order-card {
  margin: 0 0 20rpx 0;
  padding: 30rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-type-area {
  display: flex;
  align-items: center;
}

.order-icon-small {
  width: 40rpx;
  height: 40rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.order-type {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.order-status-tag {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.status-done {
  background-color: #e6fff1;
  color: #07c160;
}

.status-processing {
  background-color: #fff7e6;
  color: #ff9800;
}

.order-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-info-left {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.order-desc {
  font-size: 26rpx;
  color: #666;
}

.order-amount-area {
  display: flex;
  align-items: baseline;
  color: #ff4d4f;
}

.amount-symbol {
  font-size: 24rpx;
  font-weight: bold;
}

.amount-value {
  font-size: 36rpx;
  font-weight: bold;
}