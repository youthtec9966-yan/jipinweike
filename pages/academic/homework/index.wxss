/* pages/academic/homework/index.wxss */
.container {
  padding-top: 100rpx; /* Leave space for fixed tabs */
}

.tabs {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
  z-index: 10;
}

.tab-item {
  font-size: 30rpx;
  color: #666;
  height: 88rpx;
  line-height: 88rpx;
  position: relative;
}

.tab-item.active {
  color: #2979ff;
  font-weight: bold;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #2979ff;
  border-radius: 2rpx;
}

.homework-list {
  padding: 20rpx;
}

.homework-card {
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.course-name {
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.deadline {
  font-size: 26rpx;
  color: #999;
}

.deadline.urgent {
  color: #ff4d4f;
}

.homework-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin: 0;
  font-size: 26rpx;
}

.empty-tips {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 28rpx;
}