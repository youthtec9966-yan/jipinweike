/* pages/academic/evaluation/index.wxss */
.container {
  padding: 20rpx;
}

.evaluation-list {
  padding-top: 20rpx;
}

.evaluation-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  margin-bottom: 24rpx;
}

.card-left {
  display: flex;
  flex-direction: column;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.teacher-name {
  font-size: 26rpx;
  color: #666;
}

.eval-btn {
  margin: 0;
  font-size: 26rpx;
  background-color: #2979ff;
  color: #fff;
  padding: 0 30rpx;
}

.eval-btn.disabled {
  background-color: #eee;
  color: #999;
}