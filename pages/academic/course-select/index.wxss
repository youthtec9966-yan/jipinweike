/* pages/academic/course-select/index.wxss */
.container {
  padding: 20rpx;
}

.course-list {
  padding-top: 20rpx;
}

.course-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.card-left {
  display: flex;
  flex-direction: column;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.course-info {
  font-size: 26rpx;
  color: #666;
}

.credit {
  margin-right: 20rpx;
  color: #ff9800;
}

.select-btn {
  margin: 0;
  font-size: 26rpx;
  background-color: #07c160;
  color: #fff;
  padding: 0 40rpx;
}

.select-btn.selected {
  background-color: #eee;
  color: #999;
}