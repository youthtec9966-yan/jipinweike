.container {
  min-height: 100vh;
  background-color: #fff;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background-color: #eee;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.version {
  font-size: 24rpx;
  color: #999;
}

.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: center;
  margin-bottom: auto;
}

.footer {
  font-size: 20rpx;
  color: #ccc;
  margin-top: 40rpx;
}