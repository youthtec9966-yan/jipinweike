/* pages/profile/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  position: relative;
  overflow-x: hidden;
}

/* 顶部背景装饰 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 480rpx;
  background: linear-gradient(135deg, #0052d4, #4364f7, #6fb1fc);
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  z-index: 0;
  overflow: hidden;
}

.circle-1, .circle-2 {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 50rpx;
  left: -50rpx;
}

/* 主体内容区 */
.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 180rpx 30rpx 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.user-info-row {
  display: flex;
  align-items: center;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.avatar-placeholder {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background: #f0f2f5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
  font-size: 60rpx;
  color: #ccc;
}

.info-col {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name-box {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.nickname {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.vip-icon {
  width: 32rpx;
  height: 32rpx;
}

.verified-badge, .unverified-badge {
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
}

.verified-badge {
  background: linear-gradient(90deg, #ffd700, #ffa500);
  color: #fff;
}

.unverified-badge {
  background: #eee;
  color: #999;
}

.school-info {
  font-size: 26rpx;
  color: #666;
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.login-desc {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
}

.edit-icon {
  padding: 10rpx;
  font-size: 36rpx;
  opacity: 0.6;
}

/* 数据统计 */
.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

.stat-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-line {
  width: 2rpx;
  height: 40rpx;
  background-color: #eee;
}

/* 通用卡片 */
.section-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #4364f7;
}

/* 宫格导航 */
.grid-nav {
  display: flex;
  justify-content: space-between;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.grid-icon-box {
  width: 90rpx;
  height: 90rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
}

.color-blue { background-color: #e3f2fd; color: #1976d2; }
.color-orange { background-color: #fff3e0; color: #f57c00; }
.color-yellow { background-color: #fffde7; color: #fbc02d; }
.color-green { background-color: #e8f5e9; color: #388e3c; }

.grid-icon {
  font-size: 44rpx;
}

.grid-text {
  font-size: 24rpx;
  color: #333;
}

/* 列表菜单 */
.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon-sm {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 24rpx;
}

.footer-version {
  text-align: center;
  font-size: 22rpx;
  color: #ccc;
  margin-top: 40rpx;
}

/* 登录弹窗 (保持原有样式，稍作优化) */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
  font-weight: bold;
}

.close-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  color: #999;
  font-size: 40rpx;
  line-height: 40rpx;
}

.modal-body {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 50%;
  margin-bottom: 20rpx;
  position: relative;
  background: #f0f0f0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.camera-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
  color: #fff;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.input-group {
  width: 100%;
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  font-weight: bold;
}

.input {
  flex: 1;
  font-size: 28rpx;
}

.submit-btn {
  width: 100% !important;
  background: #2979ff;
  color: #fff;
  border-radius: 40rpx;
  font-weight: bold;
}