.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 30rpx;
}

.menu-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #333;
}

.divider {
  height: 1rpx;
  background: #f5f5f5;
}

.arrow {
  color: #ccc;
}

.logout-btn {
  background: #fff;
  color: #ff3b30;
  text-align: center;
  padding: 30rpx 0;
  border-radius: 12rpx;
  font-size: 32rpx;
}