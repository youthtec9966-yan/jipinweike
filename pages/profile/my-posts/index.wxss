.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 20rpx;
}

.post-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
}

.comment-icon {
  margin-left: 30rpx;
}

.loading, .empty {
  text-align: center;
  margin-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}