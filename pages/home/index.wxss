/* pages/home/index.wxss */
.container {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 轮播图 */
.swiper-container {
  width: 100%;
  height: 420rpx;
  position: relative;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  /* 底部增加弧度，增加设计感 */
  /* mask-image: linear-gradient(to bottom, black 90%, transparent 100%); */
}

/* 金刚区 */
.shortcut-grid {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  margin-top:5rpx; /* 向上重叠轮播图 */
  position: relative;
  z-index: 10;
}

.shortcut-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shortcut-icon {
  font-size: 56rpx;
  margin-bottom: 6rpx;
  background-color: var(--primary-light);
  width: 150rpx;
  height: 150rpx;
  border-radius: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shortcut-text {
  font-size: 26rpx;
  color: var(--text-main);
  font-weight: 500;
}

/* 公告栏 */
.announcement-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  height: 88rpx;
  box-sizing: border-box;
}

.announcement-label {
  display: flex;
  align-items: center;
  padding-right: 20rpx;
  border-right: 1rpx solid #eee;
  margin-right: 20rpx;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--primary-color);
  font-style: italic;
}

.announcement-swiper {
  flex: 1;
  height: 40rpx;
}

.announcement-swiper-item {
  display: flex;
  align-items: center;
}

.announcement-text {
  font-size: 26rpx;
  color: #666;
}

.arrow {
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx;
}

/* 院系风采 */
.section-container {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: var(--primary-color);
  border-radius: 4rpx;
}

.department-scroll {
  display: flex;
  height: 180rpx;
}

.department-card {
  flex: 0 0 300rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.dept-icon {
  font-size: 64rpx;
  margin-right: 20rpx;
}

.dept-info {
  display: flex;
  flex-direction: column;
}

.dept-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.dept-desc {
  font-size: 22rpx;
  color: #666;
}

/* 资讯列表 */
.news-section {
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

.news-card {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.news-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 20rpx;
}

.news-title {
  font-size: 30rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.news-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}

.news-cover {
  width: 220rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background-color: #eee;
}

/* AI数字人悬浮球 */
.ai-avatar-float {
  position: fixed;
  bottom: 40rpx;
  right: 30rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
  box-shadow: 0 8rpx 20rpx rgba(37, 117, 252, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
  animation: float 3s ease-in-out infinite;
}

.avatar-pulse {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(37, 117, 252, 0.6);
  animation: pulse 2s infinite;
  box-sizing: border-box;
}

.avatar-img {
  font-size: 50rpx;
  margin-bottom: -6rpx;
}

.avatar-label {
  font-size: 18rpx;
  color: #fff;
  margin-top: 4rpx;
}

@keyframes float {
  0% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0px); }
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 1; }
  100% { transform: scale(1.4); opacity: 0; }
}

/* AI聊天弹窗 */
.chat-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.chat-modal.show {
  visibility: visible;
  opacity: 1;
}

.chat-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.chat-container {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80vh;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

.chat-modal.show .chat-container {
  transform: translateY(0);
}

.chat-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.chat-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 10rpx;
}

.chat-content {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f5f7fa;
  /* height: 76%; Removed fixed height to allow flex to work */
  overflow-y: auto; /* Ensure scrolling works */
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
}

.user-msg {
  flex-direction: row-reverse;
}

.ai-msg {
  flex-direction: row;
}

.msg-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin: 0 20rpx;
  flex-shrink: 0;
}

.ai-msg .msg-avatar {
  background: #e3f2fd;
  border: 1rpx solid #bbdefb;
}

.user-msg .msg-avatar {
  background: #f3e5f5;
  border: 1rpx solid #e1bee7;
}

.msg-bubble {
  max-width: 60%;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  position: relative;
  word-break: break-all;
}

.ai-msg .msg-bubble {
  background: #fff;
  color: #333;
  border-top-left-radius: 4rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.user-msg .msg-bubble {
  background: #2575fc;
  color: #fff;
  border-top-right-radius: 4rpx;
  box-shadow: 0 2rpx 10rpx rgba(37, 117, 252, 0.3);
}

.loading-msg {
  display: flex;
  align-items: center;
  margin-left: 120rpx;
  margin-bottom: 30rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #bbb;
  border-radius: 50%;
  margin: 0 6rpx;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}
