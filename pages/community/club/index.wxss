.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.search-bar {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.search-input {
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.club-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.club-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.club-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.club-info {
  flex: 1;
}

.club-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.club-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.club-category {
  font-size: 20rpx;
  color: #007aff;
  background-color: #e6f3ff;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}

.club-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.club-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.club-members {
  font-size: 24rpx;
  color: #999;
}

.join-btn {
  margin: 0;
  padding: 10rpx 30rpx;
  font-size: 24rpx;
  line-height: 1.5;
  background-color: #007aff;
  color: #fff;
  border-radius: 30rpx;
}
