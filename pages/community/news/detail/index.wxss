.container {
  background-color: #fff;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.article {
  padding: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.meta {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
  margin-bottom: 30rpx;
}

.cover {
  width: 100%;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
}

.content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
}

.loading, .empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  font-size: 28rpx;
}