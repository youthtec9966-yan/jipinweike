.container {
  padding: 20px;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.form-group {
  background: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
}

.label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 10px;
  font-weight: bold;
}

.input {
  width: 100%;
  height: 40px;
  font-size: 16px;
  border-bottom: 1px solid #eee;
}

.textarea {
  width: 100%;
  height: 120px;
  font-size: 16px;
  line-height: 1.5;
}

.picker {
  font-size: 16px;
  color: #333;
  padding: 10px 0;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.image-item {
  width: 80px;
  height: 80px;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}

.delete-btn {
  position: absolute;
  top: -5px;
  right: -5px;
  background: rgba(0,0,0,0.5);
  color: #fff;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  text-align: center;
  line-height: 20px;
  font-size: 12px;
}

.add-btn {
  width: 80px;
  height: 80px;
  border: 1px dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30px;
  color: #ccc;
  border-radius: 4px;
}

.submit-btn {
  background-color: #07c160;
  color: white;
  margin-top: 30px;
}
