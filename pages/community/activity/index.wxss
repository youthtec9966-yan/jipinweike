/* pages/community/activity/index.wxss */
.container {
  padding: 20rpx;
}

.activity-card {
  padding: 0;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.activity-cover {
  width: 100%;
  height: 300rpx;
  background-color: #eee;
}

.activity-info {
  padding: 24rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
}

.status-tag {
  font-size: 24rpx;
  color: #2979ff;
  background-color: #f0f7ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.apply-btn {
  margin: 0;
  font-size: 26rpx;
  background-color: #2979ff;
  color: #fff;
  padding: 0 30rpx;
}