/* pages/community/second-hand/index.wxss */
.container {
  padding: 20rpx;
}

.item-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item-card {
  width: 48%;
  padding: 0;
  overflow: hidden;
  margin: 0 0 24rpx 0;
  display: flex;
  flex-direction: column;
}

.item-cover {
  width: 100%;
  height: 340rpx;
  background-color: #eee;
}

.item-info {
  padding: 20rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
  height: 80rpx; /* limit 2 lines */
}

.price-row {
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.price-symbol {
  font-size: 24rpx;
}

.price-num {
  font-size: 32rpx;
}

.seller-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.tag {
  background-color: #f5f5f5;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

/* 悬浮按钮 */
.fab-btn {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #ff9800, #ffc107);
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 152, 0, 0.4);
  z-index: 100;
}

.fab-icon {
  font-size: 50rpx;
}