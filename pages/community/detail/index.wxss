.container {
  padding: 20rpx;
  background: #fff;
  min-height: 100vh;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #eee;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.view-count {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
}

.post-images {
  margin-bottom: 30rpx;
}

.post-image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.post-info-list {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #999;
  width: 140rpx;
}

.value {
  color: #333;
  flex: 1;
}

.price {
  color: #e53935;
  font-weight: bold;
  font-size: 32rpx;
}

.action-bar {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
  padding-top: 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.action-btn::after {
  border: none;
}

.icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.loading {
  text-align: center;
  padding: 50rpx;
  color: #999;
}
