/**app.wxss**/
page {
  background-color: #f7f8fa; /* 更柔和的灰 */
  width: 100%;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  --primary-color: #2979ff;
  --primary-light: #e6f0ff;
  --text-main: #333333;
  --text-sub: #999999;
  --bg-white: #ffffff;
}

.container {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  display: block;
}

/* 通用卡片样式 */
.card-box {
  background: var(--bg-white);
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.03);
}

/* 按钮点击态 */
.hover-opacity {
  opacity: 0.8;
}

/* 文本截断 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
